  <version>1.9.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <parent>
    <relativePath>parent/</relativePath>
    <groupId>gov.redhawk.development.configuration</groupId>
    <artifactId>parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
